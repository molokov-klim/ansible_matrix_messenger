#!/bin/bash
# Скрипт деплоя Matrix сервера

set -e

echo "Начинаем деплой Matrix сервера..."

# Обновляем систему
apt update && apt upgrade -y

# Устанавливаем необходимые зависимости
apt install -y curl wget gnupg2 software-properties-common apt-transport-https lsb-release ca-certificates

# Запускаем Ansible для настройки сервера
cd /opt/matrix-deployment
ansible-playbook -i inventory.ini site.yml --vault-password-file .vault_pass

echo "Деплой завершен успешно!"