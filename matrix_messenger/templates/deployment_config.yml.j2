---
# Deployment configuration for Matrix Messenger
# Generated by Ansible

deployment:
  domain: "{{ domain_name }}"
  admin_email: "{{ admin_email }}"
  
matrix:
  server_name: "{{ domain_name }}"
  port: {{ matrix_port }}
  
database:
  type: postgresql
  name: "{{ matrix_db_name }}"
  user: "{{ matrix_db_user }}"
  host: localhost
  
nginx:
  port: {{ nginx_port }}
  ssl_enabled: true
  
monitoring:
  prometheus_enabled: true
  fail2ban_enabled: true
  
backup:
  enabled: true
  retention_days: 7
  schedule: "0 2 * * *"
  
security:
  public_registration: false
  federation_whitelist:
    - "{{ domain_name }}"
