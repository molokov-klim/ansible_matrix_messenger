#!/bin/bash
# Скрипт резервного копирования конфигурации Matrix

BACKUP_DIR="/var/backups/matrix"
DATE=$(date +%Y%m%d_%H%M%S)

# Создаем резервную копию конфигурационных файлов
tar -czf "$BACKUP_DIR/config_$DATE.tar.gz" /etc/matrix-synapse/ /etc/nginx/sites-available/matrix

# Удаляем резервные копии конфигурации старше 14 дней
find $BACKUP_DIR -name "config_*.tar.gz" -mtime +14 -delete

echo "Резервное копирование конфигурации выполнено: config_$DATE.tar.gz"